#include<iostream>
using namespace std;

int count(int m, int n);
int main()
{
	int t;
	cin >> t;
	for(int i=0;i<t;i++)
	{
		int apples, plates;
		cin >> apples >> plates;

		int result = count(apples, plates);
		cout << result << endl;
	}
	return 0;
}
int count(int m, int n)
{
	if (m <= 1 || n <= 1)
	{
		return 1;
	}
	if (m < n)
	{
		return count(m, m);
	}
	else
	{
		return count(m, n - 1) + count(m - n, n);
	}
}
